// ===== Test: Enums =====
// Tests for: numeric enums, string enums, const enums

// Numeric enum (auto-increment)
enum Direction {
  Up,
  Down,
  Left,
  Right
}

let dir: Direction = Direction.Up;
console.log("Direction.Up:", dir);

// Numeric enum with explicit values
enum StatusCode {
  OK = 200,
  NotFound = 404,
  ServerError = 500
}

let status: StatusCode = StatusCode.OK;
console.log("StatusCode.OK:", status);

// String enum
enum Color {
  Red = "RED",
  Green = "GREEN",
  Blue = "BLUE"
}

let color: Color = Color.Red;
console.log("Color.Red:", color);

// Const enum (inline at compile time)
const enum HttpMethod {
  GET = "GET",
  POST = "POST",
  PUT = "PUT",
  DELETE = "DELETE"
}

let method: HttpMethod = HttpMethod.GET;
console.log("HttpMethod.GET:", method);

// Using enum values
function handleDirection(d: Direction): string {
  switch(d) {
    case Direction.Up: return "Going up!";
    case Direction.Down: return "Going down!";
    case Direction.Left: return "Going left!";
    case Direction.Right: return "Going right!";
  }
}

console.log("[Test: Enums] All enum types parsed successfully");
console.log("handleDirection(Up):", handleDirection(Direction.Up));
console.log("handleDirection(Right):", handleDirection(Direction.Right));
